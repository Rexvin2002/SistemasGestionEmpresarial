<odoo>
    <data>

        <!-- Acción para abrir la vista -->
        <record model="ir.actions.act_window" id="paciente_action">
            <field name="name">Pacientes</field>
            <field name="res_model">psicologia.paciente</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú de Pacientes -->
        <menuitem name="Pacientes"
            id="psicologia_menu_paciente"
            parent="psicologia_configuracion"
            sequence="20" />

        <!-- Menú de Configuración -->
        <menuitem name="Pacientes"
            id="psicologia_paciente"
            parent="psicologia_menu_root"
            action="paciente_action"
            sequence="30" />

        <!-- Vista de lista -->
        <record model="ir.ui.view" id="paciente_tree">
            <field name="name">psicologia.paciente.tree</field>
            <field name="model">psicologia.paciente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="dni" />
                    <field name="name" />
                    <field name="edad" />
                    <field name="telefono" />
                    <field name="correo" />
                    <field name="direccion" />
                    <field name="psicologo_ids" widget="many2many_tags" />
                    <field name="total_terapias" />
                </tree>
            </field>
        </record>

        <!-- Vista de formulario -->
        <record model="ir.ui.view" id="paciente_form">
            <field name="name">psicologia.paciente.form</field>
            <field name="model">psicologia.paciente</field>
            <field name="arch" type="xml">
                <form string="Pacientes">
                    <div>
                        <div style="display: flex; align-items: center; gap: 16px; margin: 15px;">
                            <field name="imagen" widget="image"
                                style="width: 120px; height: 120px; object-fit: cover; overflow: hidden;" />
                            <h1 style="margin: 0; flex-grow: 1; font-size: 40pt; font-weight: bold;">
                                <field name="name" />
                            </h1>
                        </div>
                    </div>
                    <sheet>
                        <group string="Datos Personales">
                            <field name="dni" />
                            <field name="fecha_nacimiento" />
                            <field name="edad" />
                            <field name="telefono" />
                            <field name="correo" />
                            <field name="direccion" />
                            <field name="historial_medico" />
                        </group>
                        <group string="Correspondencias">
                            <field name="psicologo_ids" widget="many2many_tags" />
                            <!--<field
                            name="historial_medico" />-->
                        </group>
                        <notebook>
                            <page string="Terapias">
                                <group>
                                    <field name="total_terapias" readonly="1" />
                                </group>
                                <field name="terapias_ids">
                                    <tree>
                                        <field name="name" />
                                        <field name="estado" />
                                        <field name="paciente_id" widget="badge" />
                                        <field name="psicologo_ids" widget="many2many_tags" />
                                        <field name="fecha" />
                                        <field name="duracion" />
                                        <field name="total_sesiones" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>